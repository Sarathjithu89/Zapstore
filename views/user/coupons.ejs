        <div class="tab" data-tab="used">Used Coupons</div>
        <div class="tab" data-tab="expired">Expired Coupons</div>
      </div>

      <!-- Available Coupons -->
      <div
        id="available"
        class="tab-content <%= pagination.activeTab === 'available' ? 'active' : '' %>"
      >
        <% if (coupons && coupons.available && coupons.available.length > 0) {
        %> <% coupons.available.forEach(coupon => { %>
        <div class="coupon-card">
          <div class="coupon-left">
            <div class="coupon-amount">₹<%= coupon.offerPrice %></div>
            <div>OFF</div>
          </div>
          <div class="coupon-right">
            <h6><%= coupon.name %></h6>
            <div class="coupon-code" onclick="copyCouponCode(this)">
              <%= coupon.name %>
            </div>
            <div class="coupon-details">
              <p>Min. Order: ₹<%= coupon.minimumPrice %></p>
              <p>
                Valid until: <%= new Date(coupon.expireOn).toLocaleDateString()
                %>
              </p>
            </div>
          </div>
        </div>
        <% }); %>

        <!-- Pagination -->
        <% if (pagination && pagination.activeTab === 'available' &&
        pagination.totalPages > 1) { %>
        <div class="pagination-container mt-4">
          <nav aria-label="Coupon pagination">
            <ul class="pagination justify-content-center">
              <!-- Previous Button -->
              <li
                class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>"
              >
                <a
                  class="page-link"
                  href="/users/mycoupons?tab=available&page=<%= pagination.page-1 %>"
                  aria-label="Previous"
                >
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>

              <!-- Page Numbers -->
              <% for(let i = 1; i <= pagination.totalPages; i++) { %>
              <li
                class="page-item <%= pagination.page === i ? 'active' : '' %>"
              >
                <a
                  class="page-link"
                  href="/users/mycoupons?tab=available&page=<%= i %>"
                  ><%= i %></a
                >
              </li>
              <% } %>

              <!-- Next Button -->
              <li
                class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>"
              >
                <a
                  class="page-link"
                  href="/users/mycoupons?tab=available&page=<%= pagination.page+1 %>"
                  aria-label="Next"
                >
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
