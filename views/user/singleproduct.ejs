<!-- JavaScript for Product Gallery -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Thumbnails click event
    const thumbs = document.querySelectorAll(".gallery-thumb");
    const mainImage = document.querySelector(".gallery-main img");
    const productImage = document.getElementById("productImage");

    thumbs.forEach((thumb) => {
      thumb.addEventListener("click", function () {
        // Update active class
        thumbs.forEach((t) => t.classList.remove("active"));
        this.classList.add("active");

        // Update main image
        const largeUrl = this.querySelector("img").getAttribute("data-large");
        mainImage.src = largeUrl;
        productImage.style.setProperty("--url", `url('${largeUrl}')`);
      });
    });

    // Zoom effect
    if (productImage) {
      productImage.addEventListener("mouseenter", () => {
        productImage.style.setProperty("--display", "block");
      });

      productImage.addEventListener("mouseleave", () => {
        productImage.style.setProperty("--display", "none");
      });

      productImage.addEventListener("mousemove", (e) => {
        const rect = productImage.getBoundingClientRect();
        const x = ((e.clientX - rect.left) / rect.width) * 100;
        const y = ((e.clientY - rect.top) / rect.height) * 100;

        productImage.style.setProperty("--zoom-x", `${x}%`);
        productImage.style.setProperty("--zoom-y", `${y}%`);
      });
    }

    // Quantity buttons
    const qtyInput = document.querySelector(".qty-input");
    const qtyBtnDec = document.querySelector(".qty-btn.dec");
    const qtyBtnInc = document.querySelector(".qty-btn.inc");

    qtyBtnDec.addEventListener("click", () => {
      let qty = parseInt(qtyInput.value);
      if (qty > 1) {
        qtyInput.value = qty - 1;
      }
    });

    qtyBtnInc.addEventListener("click", () => {
      let qty = parseInt(qtyInput.value);
      qtyInput.value = qty + 1;
    });

    // Tab functionality
    const tabLinks = document.querySelectorAll(".tab-link");
    const tabPanes = document.querySelectorAll(".tab-pane");

    tabLinks.forEach((tab) => {
      tab.addEventListener("click", function (e) {
        e.preventDefault();

        // Update active class on tabs
        tabLinks.forEach((t) => t.classList.remove("active"));
        this.classList.add("active");

        // Show active tab content
        const target = this.getAttribute("href").substring(1);
        tabPanes.forEach((pane) => {
          pane.classList.remove("active");
          if (pane.id === target) {
            pane.classList.add("active");
          }
        });
      });
    });
  });
</script>

