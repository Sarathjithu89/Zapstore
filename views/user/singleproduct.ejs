<!-- Product Details Section -->
<div class="product-section">
  <div class="container">
    <!-- Breadcrumb -->
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
      <% if (product.category) { %>
      <li class="breadcrumb-item">
        <a href="/category/<%= product.category._id %>"
          ><%= product.category.name %></a
        >
      </li>
      <% } %>
      <li class="breadcrumb-item"><%= product.productName %></li>
    </ol>

    <div class="row">
      <!-- Product Gallery -->
      <div class="col-lg-5 col-md-6">
        <div class="product-gallery">
          <!-- Product Badges -->
          <div class="gallery-badge">
            <% if (product.isNew) { %>
            <span class="badge badge-new">New</span>
            <% } %> <% if (product.regularPrice > product.salePrice) { %>
            <span class="badge badge-sale">Sale</span>
            <% } %>
          </div>

          <!-- Main Image -->
          <div
            class="gallery-main"
            id="productImage"
            style="
              --url: url('/uploads/product-images/<%= product.productImage && product.productImage.length ? product.productImage[0] : 'default.jpg' %>');
              --zoom-x: 50%;
              --zoom-y: 50%;
              --display: none;
            "
          >
            <% if (product.productImage && product.productImage.length > 0) { %>
            <img
              src="/uploads/product-images/<%= product.productImage[0] %>"
              alt="<%= product.productName %>"
              class="active"
            />
            <% } else { %>
            <img
              src="/images/product/large-size/default.jpg"
              alt="<%= product.productName %>"
              class="active"
            />
            <% } %>
          </div>

          <!-- Thumbnails -->
          <div class="gallery-thumbs">
            <% if (product.productImage && product.productImage.length > 0) { %>
            <% product.productImage.forEach((image, index) => { %>
            <div
              class="gallery-thumb <%= index === 0 ? 'active' : '' %>"
              data-index="<%= index %>"
            >
              <img
                src="/uploads/product-images/<%= image %>"
                alt="product image thumb"
                data-large="/uploads/product-images/<%= image %>"
              />
            </div>
            <% }); %> <% } else { %>
            <div class="gallery-thumb active" data-index="0">
              <img
                src="/images/product/small-size/default.jpg"
                alt="product image thumb"
                data-large="/images/product/large-size/default.jpg"
              />
            </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Product Info -->
      <div class="col-lg-7 col-md-6">
        <div class="product-info">
          <h1 class="product-title"><%= product.productName %></h1>
          <span class="product-sku">
            Reference: <%= product.productSKU || 'N/A' %>
          </span>

          <!-- Rating -->
          <div class="rating-wrap">
            <div class="rating">
              <% for (let i = 0; i < 5; i++) { %> <% if (i <
              Math.round(product.rating || 0)) { %>
              <i class="fa fa-star rating-star"></i>
              <% } else { %>
              <i class="fa fa-star-o rating-star empty"></i>
              <% } %> <% } %>
            </div>
            <a href="#reviews" class="rating-link">
              <%= product.reviews ? product.reviews.length : 0 %> Reviews
            </a>
            <a
              href="#"
              data-bs-toggle="modal"
