<style>
  /* About Us Page Specific Styles */
  .about-title {
    position: relative;
    padding-bottom: 15px;
    margin-bottom: 30px;
    font-weight: 700;
    color: #333;
    text-align: center;
  }

  .about-title:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background-color: #007bff;
  }

  .about-text h4,
  .mission-block h4,
  .vision-block h4 {
    margin-bottom: 15px;
    color: #333;
    font-weight: 600;
  }

  .feature-box {
    transition: all 0.3s ease;
    border-radius: 8px;
    height: 100%;
  }

  .feature-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .feature-icon {
    color: #007bff;
  }

  .team-member {
    transition: all 0.3s ease;
  }

  .team-member:hover {
    transform: translateY(-5px);
  }

  .team-image img {
    width: 160px;
    height: 160px;
    object-fit: cover;
    border: 5px solid #f8f9fa;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .team-member:hover .team-image img {
    border-color: #007bff;
  }

  .testimonial-block {
    transition: all 0.3s ease;
    height: 100%;
  }

  .testimonial-block:hover {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .contact-cta {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border: 1px solid #dee2e6;
  }

  @media (max-width: 767px) {
    .about-title {
      font-size: 1.8rem;
    }

    .team-image img {
      width: 140px;
      height: 140px;
    }
  }
</style>
<!-- Begin About Us Area -->
<div class="about-us-area pt-60 pb-60">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="about-us-content">
          <h2 class="about-title mb-4">Welcome to Zapstore</h2>

