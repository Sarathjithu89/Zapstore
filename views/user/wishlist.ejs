<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb bg-light">
  <div class="container">
    <div
      class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-between py-4"
    >
      <div class="col-lg-6">
        <h1 class="display-6 fw-bold text-primary">My Wishlist</h1>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <a href="/" class="text-decoration-none text-dark">Home</a>
            <span class="mx-2"><i class="fa fa-angle-right"></i></span>
            <a href="/wishlist" class="text-decoration-none text-primary"
              >Wishlist</a
            >
          </ol>
        </nav>
      </div>
      <div class="col-lg-4 d-none d-lg-block text-end">
        <img
          src="/api/placeholder/120/120"
          alt="Wishlist icon"
          class="img-fluid"
        />
      </div>
    </div>
  </div>
</section>
<!-- End Banner Area -->

<main class="main my-5">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
          <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="mb-0 fw-bold">Saved Items</h5>
              <%if(wishlist.length>0){%>
              <span class="badge bg-primary rounded-pill px-3 py-2"
                ><%= wishlist.length %> items</span
              >
              <%}%>
            </div>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table
                class="table shopping-summery text-center align-middle mb-0"
              >
                <thead class="bg-light">
                  <tr>
                    <th scope="col" width="15%">Image</th>
                    <th scope="col" width="35%" class="text-start">Product</th>
                    <th scope="col" width="15%">Price</th>
                    <th scope="col" width="20%">Add to Cart</th>
                    <th scope="col" width="15%">Remove</th>
                  </tr>
                </thead>
                <tbody>
                  <%if(wishlist.length>0){%> <%for(let product of wishlist){%>
                  <tr>
                    <td class="product-thumbnail">
                      <a href="/productDetails?id=<%=product._id%>">
                        <img
                          src="<%= product.productImage[0] %>"
                          alt="<%= product.productName %>"
                          class="img-fluid rounded"
                          style="max-height: 90px; width: auto"
                        />
                      </a>
                    </td>
                    <td class="product-name text-start">
                      <h6 class="mb-1">
                        <a
                          href="/productDetails?id=<%=product._id%>"
                          class="text-dark text-decoration-none fw-bold"
                        >
                          <%=product.productName%>
                        </a>
                      </h6>
                      <div class="product-meta small text-muted">
                        <span class="me-2"
                          ><i class="fa fa-tag me-1"></i
                          ><%=product.category.name%></span
                        >
                        <span
                          ><i class="fa fa-building me-1"></i
                          ><%=product.brand%></span
                        >
                      </div>
                    </td>
                    <td class="price">
                      <span class="fw-bold text-dark"
                        >â‚¹<%=product.salePrice%></span
                      >
                    </td>
                    <td class="text-center">
                      <button
                        onclick="addToCart('<%=product._id%>')"
                        class="btn btn-primary btn-sm px-3 py-2 rounded-pill"
                      >
                        <i class="fa fa-shopping-cart me-1"></i> Add to Cart
                      </button>
                    </td>
                    <td class="action">
                      <button
                        class="btn btn-outline-danger btn-sm rounded-circle"
                        onclick="confirmRemove('<%=product._id%>')"
                      >
                        <i class="fa fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                  <%}%> <%}else{%>
                  <tr>
                    <td colspan="5" class="py-5">
                      <div class="text-center">
                        <img
                          src="/api/placeholder/120/120"
                          alt="Empty wishlist"
                          class="img-fluid mb-3"
                        />
                        <h5 class="fw-bold text-secondary">
                          Your wishlist is empty
                        </h5>
                        <p class="text-muted">
                          Items added to your wishlist will appear here
                        </p>
                        <a href="/shop" class="btn btn-primary px-4 py-2 mt-3">
                          Continue Shopping
                        </a>
                      </div>
                    </td>
                  </tr>
                  <%}%>
                </tbody>
              </table>
            </div>
          </div>
          <%if(wishlist.length>0){%>
          <div class="card-footer bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
              <a href="/shop" class="btn btn-outline-secondary">
                <i class="fa fa-arrow-left me-2"></i> Continue Shopping
              </a>
              <a href="/cart" class="btn btn-outline-primary">
                Go to Cart <i class="fa fa-arrow-right ms-2"></i>
              </a>
            </div>
          </div>
          <%}%>
        </div>
      </div>
    </div>
  </div>
</main>

