<style>
  /* Wishlist Page Custom Styles */

  /* Banner Area Styling */
  .banner-area.organic-breadcrumb {
    background-color: #f8f9fa;
    border-bottom: 1px solid #eee;
    padding: 20px 0;
    margin-bottom: 30px;
  }

  .banner-area h1 {
    color: #333;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 5px;
  }

  .breadcrumb-banner .breadcrumb {
    padding: 0;
    background: transparent;
    margin-bottom: 0;
  }

  .breadcrumb a {
    font-size: 14px;
    transition: all 0.3s ease;
  }

  .breadcrumb a:hover {
    color: #ff6b6b;
  }

  /* Main Wishlist Table Styling */
  .shopping-summery {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
  }

  .shopping-summery thead th {
    font-weight: 600;
    color: #555;
    padding: 15px;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-bottom: 2px solid #eaeaea;
  }

  .shopping-summery tbody tr {
    transition: all 0.3s ease;
  }

  .shopping-summery tbody tr:hover {
    background-color: rgba(0, 0, 0, 0.02);
  }

  .shopping-summery td {
    padding: 20px 15px;
    vertical-align: middle;
    border-bottom: 1px solid #eaeaea;
  }

  /* Product Image */
  .product-thumbnail img {
    max-width: 90px;
    height: auto;
    object-fit: cover;
    transition: transform 0.3s ease;
    border: 1px solid #f0f0f0;
  }

  .product-thumbnail img:hover {
    transform: scale(1.05);
  }

  /* Product Name */
  .product-name h6 {
    font-size: 16px;
    margin-bottom: 5px;
    line-height: 1.4;
  }

  .product-name h6 a {
    color: #333;
    transition: color 0.3s ease;
  }

  .product-name h6 a:hover {
    color: #ff6b6b;
    text-decoration: none;
  }

  .product-meta {
    font-size: 13px;
    color: #888;
  }

  .product-meta i {
    font-size: 12px;
  }

  /* Price */
  .price .fw-bold {
    font-size: 16px;
    color: #333;
  }

  /* Buttons */
  .btn-primary {
    background-color: #ff6b6b;
    border-color: #ff6b6b;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #ff5252;
    border-color: #ff5252;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .btn-outline-danger {
    color: #ff6b6b;
    border-color: #ff6b6b;
    transition: all 0.3s ease;
  }

  .btn-outline-danger:hover {
    background-color: #ff6b6b;
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .btn-outline-secondary {
    border-color: #ddd;
    color: #666;
    transition: all 0.3s ease;
  }

  .btn-outline-secondary:hover {
    background-color: #f8f9fa;
    color: #333;
  }

  .btn-outline-primary {
    border-color: #ff6b6b;
    color: #ff6b6b;
    transition: all 0.3s ease;
  }

  .btn-outline-primary:hover {
    background-color: #ff6b6b;
    color: #fff;
  }

  /* Card Styling */
  .card {
    border: none;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .card:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
  }

  .card-header {
    border-bottom: 1px solid #f0f0f0;
  }

  .card-footer {
    border-top: 1px solid #f0f0f0;
  }

  /* Badge Styling */
  .badge {
    font-weight: 500;
    padding: 6px 12px;
    font-size: 12px;
  }

  .badge.bg-primary {
    background-color: #ff6b6b !important;
  }

  /* Empty Wishlist */
  .py-5 img {
    opacity: 0.6;
    max-width: 100px;
    margin-bottom: 15px;
  }

  .py-5 h5 {
    color: #555;
  }

  .py-5 p {
    max-width: 80%;
    margin: 0 auto;
    color: #888;
  }

  /* Responsive Adjustments */
  @media (max-width: 992px) {
    .shopping-summery thead th {
      font-size: 13px;
      padding: 12px 8px;
    }

    .product-name h6 {
      font-size: 14px;
    }

    .product-meta {
      font-size: 12px;
    }

    .btn-sm {
      padding: 0.25rem 0.5rem;
      font-size: 0.75rem;
    }
  }

  @media (max-width: 768px) {
    .shopping-summery {
      min-width: 650px;
    }

    .table-responsive {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .banner-area h1 {
      font-size: 1.75rem;
    }
  }

  /* Animation for Add to Cart */
  @keyframes pulse {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1);
    }
  }

  .btn-primary:active {
    animation: pulse 0.3s ease-in-out;
  }

  /* SweetAlert Customization */
  .swal2-popup {
    border-radius: 15px !important;
    padding: 20px !important;
  }

  .swal2-title {
    font-size: 24px !important;
    font-weight: 600 !important;
  }

  .swal2-content {
    font-size: 16px !important;
  }

  /* Hover Effects */
  .action button {
    opacity: 0.85;
    transition: all 0.3s ease;
  }

  .action button:hover {
    opacity: 1;
  }

  /* Custom Icons */
  .fa-tag,
  .fa-building {
    opacity: 0.6;
  }

  /* Additional Helper Classes */
  .text-primary {
    color: #ff6b6b !important;
  }

  .bg-light {
    background-color: #f9f9f9 !important;
  }
</style>
