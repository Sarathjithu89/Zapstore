<script>
  function togglePassword(inputId, icon) {
    const input = document.getElementById(inputId);
    if (input.type === "password") {
      input.type = "text";
      icon.classList.add("bi-eye-slash-fill");
      icon.classList.remove("bi-eye-fill");
    } else {
      input.type = "password";
      icon.classList.add("bi-eye-fill");
      icon.classList.remove("bi-eye-slash-fill");
    }
  }

  // Send verification code
  document
    .getElementById("sendVerificationBtn")
    .addEventListener("click", async function () {
      // Reset error messages
      document.getElementById("currentPasswordError").textContent = "";
      document.getElementById("newEmailError").textContent = "";

      const currentPassword = document.getElementById("currentPassword").value;
      const newEmail = document.getElementById("newEmail").value;

      // Validate inputs
      let isValid = true;

      if (!currentPassword) {
        document.getElementById("currentPasswordError").textContent =
          "Please enter your current password";
        isValid = false;
      }

      if (!newEmail) {
        document.getElementById("newEmailError").textContent =
          "Please enter a new email address";
        isValid = false;
      } else if (!/^\S+@\S+\.\S+$/.test(newEmail)) {
        document.getElementById("newEmailError").textContent =
          "Please enter a valid email address";
        isValid = false;
      } else if (newEmail === document.getElementById("currentEmail").value) {
        document.getElementById("newEmailError").textContent =
          "New email must be different from your current email";
        isValid = false;
      }

      if (!isValid) return;

      document.getElementById("sendVerificationBtn").innerHTML =
        'Please wait... <span class="spinner-border spinner-border-sm"></span>';
      document.getElementById("sendVerificationBtn").disabled = true;

      try {
        const response = await fetch("/sendEmailVerification", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            currentPassword,
            newEmail,
          }),
        });

        const result = await response.json();

        if (result.success) {
          // Show verification code field
          document.getElementById("verificationCodeGroup").style.display =
            "block";
          document.getElementById("updateEmailBtn").disabled = false;
          document.getElementById("sendVerificationBtn").textContent =
            "Resend Code";

          Swal.fire({
            icon: "success",
            title: "Verification Code Sent",
            text: "A verification code has been sent to your new email address",
            timer: 3000,
            showConfirmButton: false,
          });
        } else {
          if (result.error === "invalid_password") {
            document.getElementById("currentPasswordError").textContent =
              "Current password is incorrect";
          } else if (result.error === "email_exists") {
            document.getElementById("newEmailError").textContent =
              "This email is already in use";
          } else {
            Swal.fire({
              icon: "error",
              title: "Oops...",
              text: result.message || "Failed to send verification code",
            });
          }
        }
      } catch (error) {
        console.error("Error:", error);
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: "An unexpected error occurred. Please try again.",
        });
      }
    });

  // Update email form submission
  document
    .getElementById("changeEmailForm")
    .addEventListener("submit", async function (e) {
      e.preventDefault();

      // Reset error messages
      document.getElementById("verificationCodeError").textContent = "";

      const currentPassword = document.getElementById("currentPassword").value;
      const newEmail = document.getElementById("newEmail").value;
      const verificationCode =
        document.getElementById("verificationCode").value;

      // Validate verification code
      if (!verificationCode) {
        document.getElementById("verificationCodeError").textContent =
          "Please enter the verification code";
        return;
      }

      try {
        const response = await fetch("/updateEmail", {
          method: "PATCH",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            currentPassword,
            newEmail,
            verificationCode,
          }),
        });

        const result = await response.json();

        if (result.success) {
          await Swal.fire({
            icon: "success",
            title: "Success!",
            text: "Your email has been updated successfully. Please log in with your new email.",
            timer: 3000,
            showConfirmButton: false,
          });

          // Redirect to login page after email update
          window.location.href = "/users/profile";
        } else {
          if (result.error === "invalid_code") {
            document.getElementById("verificationCodeError").textContent =
              "Invalid or expired verification code";
          } else {
            Swal.fire({
              icon: "error",
              title: "Oops...",
              text: result.message || "Failed to update email",
            });
          }
        }
      } catch (error) {
        console.error("Error:", error);
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: "An unexpected error occurred. Please try again.",
        });
      }
    });

  function confirmLogout(event) {
    event.preventDefault(); // Prevent default link behavior

    Swal.fire({
      title: "Are you sure?",
      text: "You will be logged out!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, Logout",
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/logout"; // Redirect only if confirmed
      }
    });
  }
</script>

