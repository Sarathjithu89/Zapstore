  <!-- Main Content -->
  <div class="col-md-8 col-sm-9 main-content mx-1">
    <div class="profile-header">
      <div class="profile-picture-container">
        <img
          src="/uploads/user-images/<%= user.profileImage %>"
          class="rounded-circle"
          id="profileImage"
          alt="Profile Picture"
        />

        <input
          type="file"
          id="imageUpload"
          accept="image/*"
          style="display: none"
          onchange="previewImage(event)"
        />
        <button
          class="change-photo-btn"
          onclick="document.getElementById('imageUpload').click()"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-camera"
            viewBox="0 0 16 16"
          >
            <path
              d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4z"
            />
            <path
              d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5m0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7M3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0"
            />
          </svg>
        </button>
      </div>
      <div>
        <h3><%= user.name || 'User Name' %></h3>
        <p class="text-muted mb-1">
          Member since <%= user.createdAt ? new
          Date(user.createdAt).toLocaleDateString() : 'Join Date' %>
        </p>
        <button
          class="btn btn-secondary btn-sm remove-photo-btn"
          style="
            --bs-btn-padding-y: 0.2rem;
            --bs-btn-padding-x: 0.5rem;
            --bs-btn-font-size: 0.7rem;
          "
          onclick="removeProfileImage()"
        >
          Remove Photo
        </button>
      </div>
    </div>

    <ul class="nav nav-tabs mb-2" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button
          class="nav-link active"
          id="profile-tab"
          data-bs-toggle="tab"
          data-bs-target="#profile-tab-pane"
          type="button"
          role="tab"
          aria-controls="profile-tab-pane"
          aria-selected="true"
        >
          Profile Info
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button
          class="nav-link"
          id="password-tab"
          data-bs-toggle="tab"
          data-bs-target="#password-tab-pane"
          type="button"
          role="tab"
          aria-controls="password-tab-pane"
          aria-selected="false"
        >
          Password
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button
          class="nav-link"
          id="referral-tab"
          data-bs-toggle="tab"
          data-bs-target="#referral-tab-pane"
          type="button"
          role="tab"
          aria-controls="referral-tab-pane"
          aria-selected="false"
        >
          Referrals
        </button>
      </li>
    </ul>

    <div class="tab-content" id="myTabContent">
      <!-- Profile Info Tab -->
      <div
        class="tab-pane fade show active"
        id="profile-tab-pane"
        role="tabpanel"
        aria-labelledby="profile-tab"
        tabindex="0"
      >
        <h2>Personal Information</h2>
        <form id="profileForm" class="profileForm">
          <div class="row">
            <div class="form-group col-md-6">
              <label>Full Name <span class="text-danger">*</span></label>
              <input
                name="name"
                type="text"
                value="<%= user.name %>"
                class="form-control"
                required
              />
            </div>

            <div class="form-group col-md-6">
              <label>Email address</label>
              <input
                id="profileEmail"
                type="email"
                value="<%= user.email %>"
                class="form-control"
                disabled
              />
              <small class="text-muted">Email cannot be changed here</small>
            </div>
            <div class="form-group col-md-6">
              <label>Phone Number <span class="text-danger">*</span></label>
              <div class="input-group">
                <input
                  type="text"
                  name="phone"
                  class="form-control"
                  value="<%= user.phone %>"
                  pattern="[0-9]{10}"
                  title="Please enter a valid 10-digit phone number"
                  placeholder="Enter phone number"
                  required
                />
              </div>
            </div>

            <div class="form-group col-md-6 mt-2">
              <a class="btn btn-primary" href="/change-email"
                >Change Your Email</a
              >
            </div>
          </div>
          <button type="submit" class="btn btn-success mt-3">
            Save Changes
          </button>
        </form>
      </div>

      <!-- Password Tab -->
      <div
        class="tab-pane fade"
        id="password-tab-pane"
        role="tabpanel"
        aria-labelledby="password-tab"
        tabindex="0"
      >
        <h2>Change Password</h2>
        <form id="changePasswordForm" class="changePasswordForm">
          <div class="row">
            <div class="form-group col-md-6">
              <label for="currentPassword">Current Password</label><br />
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control"
                  id="currentPassword"
                  name="currentPassword"
                />
                <i
                  onclick="togglePassword('currentPassword', this)"
                  class="bi bi-eye-fill toggle-password"
                ></i>
              </div>
              <small id="currentPasswordError" class="text-danger"></small>
              <br />
            </div>
            <div class="col-md-6"></div>
            <div class="form-group col-md-6">
              <label for="newPassword">New Password</label><br />
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control"
                  id="newPassword"
                  name="newPassword"
                />
                <i
                  onclick="togglePassword('newPassword', this)"
                  class="bi bi-eye-fill toggle-password"
                ></i>
              </div>
              <small id="newPasswordError" class="text-danger"></small>
              <br />
            </div>
            <div class="form-group col-md-6">
              <label for="confirmPassword">Confirm New Password</label><br />
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control"
                  id="confirmPassword"
                  name="confirmPassword"
                />
              </div>
              <small id="confirmPasswordError" class="text-danger"></small>
              <br />
            </div>
          </div>
          <div class="d-flex mt-1 align-items-center justify-content-around">
            <button type="submit" class="btn btn-primary">
              Change Password
            </button>
            <div id="forgotpasschange" class="">
              <a
                href="#forgotpasschange"
                style="text-decoration: none"
                onclick="confirmForgotPassword()"
                >Forgot Password?</a
              >
            </div>
          </div>
        </form>
      </div>
      <div
        class="tab-pane fade"
        id="referral-tab-pane"
        role="tabpanel"
        aria-labelledby="referral-tab"
        tabindex="0"
      >
        <h2>Referral Information</h2>
        <div class="row mt-3">
          <div class="col-md-8">
            <div class="card mb-4">
              <div class="card-body">
                <h5 class="card-title">Your Referral Link</h5>
                <div class="input-group mb-3">
                  <input
                    type="text"
                    class="form-control"
                    value="<%= user.referralCode %>"
                    id="referralCode"
                    readonly
                  />
                  <button
                    class="btn btn-outline-secondary"
                    type="button"
                    onclick="copyFullReferralLink()"
                  >
                    <i class="bi bi-clipboard"></i> Copy Link
                  </button>
                </div>
                <small class="text-muted"
                  >Click "Copy Link" to copy your complete referral URL and
                  share
                </small>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-8">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Referred Users</h5>
                <% if (user.redeemed) { %>
                <div class="list-group list-group-flush">
                  <%= user.redeemed %>
                </div>
                <div>rewards : <%= user.redeemed *100 %></div>
                <% } else { %>
                <p class="text-muted">You haven't referred any users yet.</p>
                <% } %>
              </div>

              <div class="card-footer">
                <div class="text-muted small">
                  Share your referral link to invite friends and earn rewards
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Hidden input field to store the full URL -->
        <input
          type="hidden"
          id="fullReferralLink"
          value="http://localhost:3000/register?ref=<%= user.referralCode %>"
        />
      </div>
    </div>
  </div>
</div>

