<%- include('../partials2/header.ejs') %>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css"
/>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
/>

<main id="main">
  <!-- Breadcrumbs-->
  <div class="bg-light border-bottom py-3 mb-4">
    <div class="container-fluid">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Coupons</li>
        </ol>
      </nav>
    </div>
  </div>
  <!-- / Breadcrumbs-->
  <style>
    :root {
      --primary-color: #4361ee;
      --primary-light: #e6ecff;
      --primary-dark: #3a56d4;
      --secondary-color: #2b2d42;
      --success-color: #2ecc71;
      --danger-color: #e63946;
      --warning-color: #f9c74f;
      --info-color: #4cc9f0;
      --light-color: #f8f9fa;
      --dark-color: #212529;
      --gray-100: #f8f9fa;
      --gray-200: #e9ecef;
      --gray-300: #dee2e6;
      --gray-400: #ced4da;
      --gray-500: #adb5bd;
      --border-radius: 8px;
      --box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
      --transition-speed: 0.3s;
    }

    body {
      font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI",
        Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background-color: #f7f9fc;
      color: var(--dark-color);
      line-height: 1.6;
    }

    .container {
      max-width: 1320px;
      margin: 0 auto;
      padding: 0 15px;
    }

    /* Content Header Styles */
    .content-header {
      padding: 1.5rem 0;
      background-color: white;
      margin-bottom: 2rem;
    }

    .content-title {
      font-size: 1.75rem;
      color: var(--secondary-color);
      margin: 0;
      font-weight: 600;
    }

    /* Search Form Styles */
    .search-form {
      margin: 20px auto 30px;
      max-width: 600px;
      transition: all 0.3s ease;
    }

    .input-group {
      /* display: flex;
      justify-content: center;
      box-shadow: 0 3px 10px rgba(0,0,0,0.05);
      border-radius: var(--border-radius); */
    }

    .search-input {
      padding: 14px 18px;
      font-size: 16px;
      border: 1px solid var(--gray-300);
      border-radius: var(--border-radius) 0 0 var(--border-radius);
      width: 70%;
      transition: all var(--transition-speed);
      box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    .search-input:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
    }

    .search-button {
      padding: 12px 24px;
      background-color: var(--primary-color);
      color: white;
      border: none;
      border-radius: 0 var(--border-radius) var(--border-radius) 0;
      cursor: pointer;
      font-weight: 500;
      transition: all var(--transition-speed);
    }

    .search-button:hover {
      background-color: var(--primary-dark);
      /* transform: translateX(1px); */
    }

    /* Table Styles */
    .table-container {
      background-color: white;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      overflow: hidden;
      margin-bottom: 2rem;
      transition: all 0.3s ease;
    }

    .table-container:hover {
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
    }

    .table-responsive {
      overflow-x: auto;
      padding: 0.5rem;
    }

    .table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      font-size: 0.95rem;
    }

    .table thead tr {
      background-color: var(--primary-color);
      color: white;
      text-align: center;
      font-weight: 600;
    }

    .table thead th {
      color: white;
      padding: 16px 15px;
      vertical-align: middle;
      border: none;
      white-space: nowrap;
      font-size: 0.9rem;
      letter-spacing: 0.3px;
      position: sticky;
      top: 0;
      box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }

    .table thead th:first-child {
      border-top-left-radius: var(--border-radius);
    }

    .table thead th:last-child {
      border-top-right-radius: var(--border-radius);
    }

    .table tbody tr:hover {
      background-color: rgba(67, 97, 238, 0.05);
    }

    .table tbody tr:nth-of-type(even) {
      background-color: rgba(0, 0, 0, 0.02);
    }

    .table tbody tr:nth-of-type(even):hover {
      background-color: rgba(67, 97, 238, 0.05);
    }

    .table tbody td {
      padding: 14px 15px;
      text-align: center;
      border-top: 1px solid var(--gray-200);
      vertical-align: middle;
    }

    /* Button Styles */
    .btn {
      padding: 8px 15px;
      border: none;
      border-radius: var(--border-radius);
      cursor: pointer;
      font-weight: 500;
      text-decoration: none;
      display: inline-block;
      margin: 2px;
      transition: all var(--transition-speed);
      font-size: 0.85rem;
    }

    .btn-sm {
      padding: 6px 12px;
      font-size: 0.8rem;
      border-radius: 6px;
    }

    .btn-info {
      background-color: var(--info-color);
      color: white;
    }

    .btn-info:hover {
      background-color: #3ab7db;
      box-shadow: 0 3px 8px rgba(76, 201, 240, 0.3);
    }

    .btn-warning {
      background-color: var(--warning-color);
      color: var(--dark-color);
    }

    .btn-warning:hover {
      background-color: #f0b429;
      box-shadow: 0 3px 8px rgba(249, 199, 79, 0.3);
    }

    .btn-danger {
      background-color: var(--danger-color);
      color: white;
    }

    .btn-danger:hover {
      background-color: #d62b39;
      box-shadow: 0 3px 8px rgba(230, 57, 70, 0.3);
    }

    .btn-success {
      background-color: var(--success-color);
      color: white;
    }

    .btn-success:hover {
      background-color: #27ae60;
      box-shadow: 0 3px 8px rgba(46, 204, 113, 0.3);
    }

    /* Pagination Styles */
    .pagination-container {
      margin: 30px 0;
    }

    .pagination {
      display: flex;
      padding-left: 0;
      list-style: none;
      justify-content: center;
      margin: 0;
      gap: 5px;
    }

    .page-item {
      margin: 0;
    }

    .page-link {
      padding: 10px 16px;
      border: 1px solid var(--gray-300);
      color: var(--primary-color);
      text-decoration: none;
      background-color: white;
      border-radius: var(--border-radius);
      transition: all var(--transition-speed);
      font-weight: 500;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .page-item.active .page-link {
      background-color: var(--primary-color);
      color: white;
      border-color: var(--primary-color);
      box-shadow: 0 4px 10px rgba(67, 97, 238, 0.3);
    }

    .page-link:hover {
      background-color: var(--primary-light);
      transform: translateY(-3px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    .page-item.disabled .page-link {
      color: var(--gray-500);
      background-color: var(--gray-100);
      cursor: not-allowed;
      opacity: 0.7;
    }

    /* Action Icons */
    .action-icons {
      display: flex;
      justify-content: center;
      gap: 8px;
      flex-wrap: wrap;
    }

    .icon-button {
      background: none;
      border: none;
      cursor: pointer;
      padding: 5px;
      border-radius: 50%;
      transition: all var(--transition-speed);
    }

    .icon-button:hover {
      background-color: rgba(0, 0, 0, 0.05);
    }

    .bi-trash-fill {
      color: var(--danger-color);
      transition: color var(--transition-speed);
    }

    .bi-trash-fill:hover {
      color: #c82333;
    }

    .bi-pencil-fill {
      color: var(--info-color);
    }

    /* Badges */
    .badge {
      display: inline-block;
      padding: 0.5em 0.75em;
      font-size: 0.75em;
      font-weight: 600;
      line-height: 1;
      text-align: center;
      white-space: nowrap;
      vertical-align: baseline;
      border-radius: 50rem;
      letter-spacing: 0.5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .badge-success {
      background-color: var(--success-color);
      color: white;
    }

    .badge-danger {
      background-color: var(--danger-color);
      color: white;
    }

    .coupon-code {
      font-family: monospace;
      font-weight: 700;
      font-size: 1.1rem;
      letter-spacing: 1px;
      background-color: var(--gray-100);
      padding: 4px 8px;
      border-radius: 4px;
      border: 1px dashed var(--gray-400);
    }

    .discount-value {
      font-weight: 700;
      color: var(--primary-color);
      font-size: 1.05rem;
    }

    /* Responsive Design */
    @media screen and (max-width: 992px) {
      .table thead th,
      .table tbody td {
        padding: 10px;
      }
    }

    @media screen and (max-width: 768px) {
      .table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }

      .search-input {
        width: 60%;
      }

      .btn {
        padding: 6px 12px;
      }
    }

    @media screen and (max-width: 576px) {
      .content-title {
        font-size: 1.5rem;
      }

      .search-input {
        width: 100%;
        border-radius: var(--border-radius);
      }

      .search-button {
        width: 100%;
        margin-top: 10px;
        border-radius: var(--border-radius);
      }

      .input-group {
        flex-direction: column;
      }
    }

    /* Links */
    a {
      text-decoration: none;
      color: inherit;
      transition: color 0.2s;
    }

    a:hover {
      color: var(--primary-color);
    }

    .text-white {
      color: white !important;
    }

    /* Status indicator */
    .status-indicator {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      display: inline-block;
      margin-right: 5px;
    }

    .status-active {
      background-color: var(--success-color);
    }

    .status-expired {
      background-color: var(--danger-color);
    }

    /* Card header */
    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.25rem;
      background-color: #f8f9fa;
      border-bottom: 1px solid var(--gray-200);
    }
  </style>

  <div class="container">
    <div class="row justify-content-center">
      <div class="container">
        <!-- Search Form -->
        <form action="" method="get" class="search-form">
          <div class="input-group">
            <input
              type="text"
              class="search-input"
              placeholder="Search by coupon code or description"
              name="search"
              aria-label="Search coupons"
            />
            <button class="search-button" type="submit">
              <i class="bi bi-search"></i> Search
            </button>
          </div>
        </form>

        <!-- Table Container -->
        <div class="table-container">
          <div class="card-header">
            <h5 class="mb-0">Coupons List</h5>
            <button class="btn btn-success" onclick="addCoupon()">
              <i class="bi bi-plus-circle"></i> Add New Coupon
            </button>
          </div>
          <div class="table-responsive">
            <table class="table" aria-label="Coupons table">
              <thead>
                <tr>
                  <th scope="col">Coupon Code</th>
                  <th scope="col">Description</th>
                  <th scope="col">Discount Type</th>
                  <th scope="col">Discount Value</th>
                  <th scope="col">Min Purchase</th>
                  <th scope="col">Max Discount</th>
                  <th scope="col">Usage Limit</th>
                  <th scope="col">Expiry Date</th>
                  <th scope="col">Status</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i=0; i < coupons.length; i++) { %>
                <tr>
                  <td>
                    <span class="coupon-code"><%= coupons[i].code %></span>
                  </td>
                  <td><%= coupons[i].description %></td>
                  <td><%= coupons[i].discountType %></td>
                  <td>
                    <span class="discount-value">
                      <%= coupons[i].discountType === 'percentage' ?
                      coupons[i].discountValue + '%' : '₹' +
                      coupons[i].discountValue.toLocaleString() %>
                    </span>
                  </td>
                  <td>₹<%= coupons[i].minPurchase.toLocaleString() %></td>
                  <td>
                    <% if(coupons[i].maxDiscount) { %> ₹<%=
                    coupons[i].maxDiscount.toLocaleString() %> <% } else { %>
                    N/A <% } %>
                  </td>
                  <td>
                    <% if(coupons[i].usageLimit) { %> <%= coupons[i].usageLimit
                    %> <% } else { %> Unlimited <% } %>
                  </td>
                  <td>
                    <%= new Date(coupons[i].expiryDate).toLocaleDateString() %>
                  </td>
                  <td>
                    <% const isExpired = new Date(coupons[i].expiryDate) < new
                    Date(); %> <% if(!coupons[i].isActive) { %>
                    <span class="badge badge-danger">
                      <i class="bi bi-x-circle"></i> Inactive
                    </span>
                    <% } else if(isExpired) { %>
                    <span class="badge badge-danger">
                      <i class="bi bi-calendar-x"></i> Expired
                    </span>
                    <% } else { %>
                    <span class="badge badge-success">
                      <i class="bi bi-check-circle"></i> Active
                    </span>
                    <% } %>
                  </td>
                  <td>
                    <div class="action-icons">
                      <% if(coupons[i].isActive) { %>
                      <button
                        class="btn btn-sm btn-danger"
                        title="Deactivate coupon"
                        onclick="confirmToggleCoupon(event, '<%= coupons[i]._id %>', false)"
                      >
                        <i class="bi bi-slash-circle"></i> Deactivate
                      </button>
                      <% } else { %>
                      <button
                        class="btn btn-sm btn-success"
                        title="Activate coupon"
                        onclick="confirmToggleCoupon(event, '<%= coupons[i]._id %>', true)"
                      >
                        <i class="bi bi-check-circle"></i> Activate
                      </button>
                      <% } %>

                      <button
                        class="btn btn-sm btn-info"
                        title="Edit coupon"
                        onclick="editCoupon('<%= coupons[i]._id %>')"
                      >
                        <i class="bi bi-pencil"></i> Edit
                      </button>

                      <button
                        class="btn btn-sm btn-danger"
                        title="Delete coupon"
                        onclick="confirmDelete('<%= coupons[i]._id %>')"
                      >
                        <i class="bi bi-trash"></i> Delete
                      </button>
                    </div>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Pagination -->
        <div class="pagination-container">
          <nav aria-label="Coupon pagination">
            <ul class="pagination">
              <!-- Page Numbers -->
              <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                <a
                  class="page-link"
                  href="?page=<%= i %>"
                  aria-label="Page <%= i %>"
                  ><%= i %></a
                >
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script>
  function addCoupon() {
    window.location.href = "/admin/addCoupon";
  }

  function editCoupon(couponId) {
    window.location.href = `/admin/editCoupon/${couponId}`;
  }

  function confirmToggleCoupon(event, couponId, activate) {
    event.preventDefault();
    const action = activate ? "activate" : "deactivate";
    const buttonColor = activate ? "#28a745" : "#d33";
    const icon = activate ? "info" : "warning";

    Swal.fire({
      title: `Are you sure?`,
      text: `You are about to ${action} this coupon!`,
      icon: icon,
      showCancelButton: true,
      confirmButtonColor: buttonColor,
      cancelButtonColor: "#3085d6",
      confirmButtonText: `Yes, ${action} it!`,
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: "/admin/toggleCouponStatus",
          method: "post",
          data: {
            couponId: couponId,
            active: activate,
          },
          success: (response) => {
            if (response.status) {
              Swal.fire(
                "Success!",
                `Coupon ${
                  activate ? "activated" : "deactivated"
                } successfully!`,
                "success"
              ).then(() => {
                location.reload();
              });
            } else {
              Swal.fire(
                "Error",
                response.message || `Failed to ${action} coupon!`,
                "error"
              );
            }
          },
          error: (error) => {
            console.error("Error:", error);
            Swal.fire("Error", "An unexpected error occurred", "error");
          },
        });
      }
    });
  }

  function confirmDelete(couponId) {
    Swal.fire({
      title: "Are you sure?",
      text: "You will not be able to recover this coupon!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#d33",
      cancelButtonColor: "#3085d6",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: `/admin/deleteCoupon/${couponId}`,
          method: "post",
          success: (response) => {
            if (response.status) {
              Swal.fire("Deleted!", "Coupon has been deleted.", "success").then(
                () => {
                  location.reload();
                }
              );
            } else {
              Swal.fire(
                "Error",
                response.message || "Failed to delete coupon!",
                "error"
              );
            }
          },
          error: (error) => {
            console.error("Error:", error);
            Swal.fire("Error", "An unexpected error occurred", "error");
          },
        });
      }
    });
  }
</script>
<%- include('../partials/alerts.ejs') %> <%- include('../partials2/footer.ejs')
%>
